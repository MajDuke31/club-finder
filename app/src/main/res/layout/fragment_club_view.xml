<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.mobileappdevii.exercises.clubfinder.ClubViewFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clubLinearLayout"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clubNameLabel"
            android:text="Name: "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:padding="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clubNameTextView"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:padding="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clubDescLabel"
            android:textSize="20sp"
            android:text="Description: "
            android:textColor="@android:color/black"
            android:padding="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clubDescTextView"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:padding="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clubDetailsLabel"
            android:textSize="20sp"
            android:text="Details: "
            android:textColor="@android:color/black"
            android:padding="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clubDetailsTextView"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:padding="3dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/prevButton"
            android:text="Back"/>
    </LinearLayout>
</FrameLayout>
